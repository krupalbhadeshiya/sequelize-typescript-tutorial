{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "src/migrations/**/*.ts", // Includes all .ts migration files
    "src/seeders/**/*.ts",    // Includes all .ts seeder files
    "src/models/**/*.ts"      // Includes all .ts model files (if applicable)
  ],
  "exclude": ["node_modules"]
}
